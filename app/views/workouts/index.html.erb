<h1>Listing workouts</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Group</th>
  </tr>
 
  <% @workouts.each do |workout| %>
    <tr>
      
      <td id="workout-title"><%=  link_to workout.name, workout_path(workout) %></td>
      <td><%= workout.group %></td>
      <td><%= link_to 'Edit', edit_workout_path(workout) %></td>    
      <td><%= link_to 'Destroy',
          workout_path(workout),
          method: :delete,
          data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
<p id "NewW">
<%=link_to 'New workout', new_workout_path %>
</p>